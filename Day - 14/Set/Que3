// https://www.codechef.com/MAY21C/problems/SOLBLTY

#include <iostream>
using namespace std;

int main()
{
    int t;
    cin>>t;
    for(int i=0;i<t;i++){
        int x,a,b;
        cin>>x>>a>>b;
        long long int ans=0;
        ans=(a+(100-x)*b)*10;
        cout<<ans<<endl;
    }
    return 0;
}
